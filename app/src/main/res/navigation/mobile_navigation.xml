<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_category">

    <fragment
        android:id="@+id/nav_category"
        android:name="com.example.shoppingapplication.ui.home.HomeFragment"
        android:label="Category"
        tools:layout="@layout/fragment_home" >

    </fragment>

    <fragment
        android:id="@+id/nav_shoppinglist"
        android:name="com.example.shoppingapplication.ui.gallery.GalleryFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_gallery" >

    </fragment>

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.shoppingapplication.ui.slideshow.SlideshowFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.shoppingapplication.DetailFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.shoppingapplication.ListFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.shoppingapplication.CategoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_category" />
</navigation>